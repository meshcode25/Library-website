extends layout
block content
    h1 #{title}
    ul
        for bookinstance in bookinstances 
            li
                p #[a(href=bookinstance.book.url) #{bookinstance.book.title}]
                if bookinstance.status==="available"
                    p.text-success #{bookinstance.status}
                else if bookinstance.status==="maintainance"
                    p.text-warning #{bookinstance.status}
                else 
                    p.text-danger #{bookinstance.status}
                if bookinstance.status !="available"
                    p #[ Due-Back] #{bookinstance.due_back}
                p
                    a(href=bookinstance.url) #{bookinstance.id}     
        else
            p #[ There are no bookintances in Meshack's Library]            